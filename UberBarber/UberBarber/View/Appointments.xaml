<Window x:Class="UberBarber.Appointments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UberBarber"
        mc:Ignorable="d"
        Title="Appointments" Height="450" Width="800">
    <Grid>
        <Button x:Name="add_appointment_button" Content="Add" HorizontalAlignment="Left" Margin="136,53,0,0" VerticalAlignment="Top" Height="87" Width="133"/>
        <DataGrid x:Name="appointments_datagrid" d:ItemsSource="{d:SampleData ItemCount=5}" RenderTransformOrigin="0.471,0.561" Margin="285,53,36,63"/>
        <Button x:Name="refresh_datagrid_button" Content="Refresh" HorizontalAlignment="Left" Margin="161,179,0,0" VerticalAlignment="Top" Height="67" Width="108" Click="refresh_datagrid_button_Click"/>

    </Grid>
</Window>
